<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mb-3">
                <h4>Agregar Viaje</h4>
            </div>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Destino" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Detalle" name="subtitulo"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="DescripciÃ³n" name="cuerpo"></textarea>
                </div>
